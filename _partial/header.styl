#header
  position: static;
  left: 0;
  top: 0;
  height: auto;
  width: inherit;
  background: #5FCB71;
  color: #fff;
  margin:0;
  padding:0;
  

@media mq-normal
  #header
    position: fixed;
    width: 280px;
    height: 100vh;


#blog-name
  font-weight: bold;
  font-size: 1.5rem;
  color: #fff;
  padding-top: 1.5rem !important;
  margin-bottom: 1rem !important;

#header a
  color:#fff;

#navigation
  padding: .5rem 1rem;

#profile-image
  max-width: 160px;

#profile-text
  font-size: 0.875rem;
  a
    text-decoration: underline;
  
#profile-ico
  padding-left: 0;
  padding-top: 1.5rem !important;
  padding-bottom: 1rem !important;
  li
    display: inline-block;
    margin-right: .8rem;
    list-style: none;
    padding-left:0;
    font-size: 1.8rem 

#nav-icon-facebook
  &:before
    content: "\f082"
#nav-icon-twitter
  &:before
    content: "\f081"
#nav-icon-linkedin
  &:before
    content: "\f08c"
#nav-icon-github
  &:before
    content: "\f092"
#nav-icon-phone
  &:before
    content: "\f098"

#profile-menu
  padding-left: 0;
  font-size: 1.2rem;
  line-height:2
  li
    list-style: none;
.nav-line
  font-weight: bold;
  padding-left:2rem;
  padding-right:2rem;
  padding-top:0.2rem;
  padding-bottom:0.2rem;
  border-radius:0.25rem;
  &:hover
    background-color:rgba(0,0,0,0.5);

.nav-btn
  background-color:rgba(0,0,0,0.3);
  font-weight: bold;
  border-radius: .25rem;
  padding-left:2rem
  padding-right:2rem
  padding-top:.8rem
  padding-bottom:.8rem
  line-height:4rem
  &:hover
    background-color:rgba(0,0,0,0.5);








