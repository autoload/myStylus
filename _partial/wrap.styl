
.wrap
    margin-left: 0px;
    margin-top:4.5rem;
    z-index: 1;
    position: absolute;
    transition: 0.3s ease-out;
    -webkit-transition: 0.3s ease-out;
    -moz-transition: 0.3s ease-out;
    -ms-transition: 0.3s ease-out;

.mobile-nav-on
    margin-top: 700px;

@media mq-normal
    .wrap
      margin-left: 280px;
      margin-top:0;
      position: static;


.wrap .container {
    max-width: 820px;
    width: 100%;
    margin-right: auto;
    margin-left: auto;
}


#header-section
    background: #fafafa !important;
    padding-bottom: 3rem !important;
    padding-top: 3rem !important;
    h2
        margin:0px;
        font-size: 2rem;
        font-weight: bold;
        text-align:center;
#blog-list
    padding: 3rem !important;
    background: #ffffff !important;

.item
    margin-bottom: 3rem !important;

.post-thumb
    max-width: 110px;
    border-radius: 2px;
    margin-right: 1rem !important;
@media mq-mobile
    .post-thumb
        display: none !important;

.media
    display: flex;
    align-items: flex-start;
.item .title
    font-size: 1.275rem;
    margin:0;
.item .title a {
    color: #292929;
}
.meta
    color: #8f8f8f;
    font-size: 0.8125rem;
.meta span:after
    content: "";
    display: inline-block;
    width: 3px;
    height: 3px;
    border-radius: 50%;
    background: #8f8f8f;
    margin-left: 0.5rem;
    margin-right: 0.5rem;
    position: relative;
    top: -3px;
.meta span:last-child:after {
    display: none;
}
.item .intro {
    font-size: 0.875rem;
}
.item .more-link {
    font-size: 0.8125rem;
}
